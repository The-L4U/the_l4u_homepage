$summonerIconDimension = 50px

.wrapper
    width: 50rem
    margin: 0 auto
    display: block

.member
    margin-bottom: 4rem
    & .mdc-card__media
        background-size: cover
        background-repeat: no-repeat
        height: 250px
    & .member__title h1
    & .member__title h2
        color: #fff
        text-shadow: 0 1px 0 black
    & .member__summoner-icon
        background-size: cover
        background-repeat: no-repeat
        height: $summonerIconDimension
        width: $summonerIconDimension
        float: left
        margin-top: 8px
        border-radius: 50%
        margin-right: 1rem
        box-shadow: 1px 1px 5px 0px rgba(0,0,0,0.75)
    & .member__history-link
        margin-left: 5px
        color: #2957a0
