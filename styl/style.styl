$summonerIconDimension = 50px

.wrapper
    width: 50rem
    margin: 0 auto
    display: block

.member
    margin-bottom: 4rem
    & .mdc-card__media
        background-size: cover
        background-repeat: no-repeat
        height: 90px
    & .member__summoner-icon
        background-size: cover
        background-repeat: no-repeat
        height: $summonerIconDimension
        width: $summonerIconDimension
        float: left
        margin-top: 8px
        border-radius: 50%
        margin-right: 1rem
