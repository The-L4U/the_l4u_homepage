$summonerIconDimension = 50px

html, body
    padding: 0
    margin: 0

body
    background-image: url(img/bg.png)
    background-repeat: no-repeat
    background-size: cover

.site-header
    text-align: center
    & h2
        color: #fff

.wrapper
    width: 50rem
    margin: 0 auto
    display: block
    @media screen and (max-width: 50rem)
        width: 100%

.member
    background-color: #fff
    margin-bottom: 4rem
    & .mdc-card__media
        background-size: cover
        background-repeat: no-repeat
        height: 250px
    & .member__title h1
    & .member__title h2
        color: #fff
        text-shadow: 0 1px 0 black
    & .member__summoner-icon
        background-size: cover
        background-repeat: no-repeat
        height: $summonerIconDimension
        width: $summonerIconDimension
        float: left
        margin-top: 8px
        border-radius: 50%
        margin-right: 1rem
        box-shadow: 1px 1px 5px 0px rgba(0,0,0,0.75)
    & .member__history-link
        margin-left: 5px
        color: #2957a0

.footer
    background-color: #071121
    width: 100%
    padding: 1rem
    color: #fff
    box-sizing: border-box
    & a
    & a:visited
        color: #fff

// Birthday stuff
.baloon
    position: fixed
    bottom: 0
    width: 75px
    height: auto
